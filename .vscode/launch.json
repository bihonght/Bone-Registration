{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Clang",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main",         // Path to the binary
            "args": ["example.stl"],                     // Arguments to pass to the binary
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",                            // Use LLDB for macOS
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-clang"               // Clang build task
        },
        {
            "name": "Debug with GCC",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main",         // Path to the binary
            "args": ["example.stl"],                     // Arguments to pass to the binary
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",                             // Use GDB for GCC builds
            "MIDebuggerPath": "/usr/bin/lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-gcc"                 // GCC build task
        }
    ]
}
